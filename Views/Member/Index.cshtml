@model IEnumerable<MathModeling21.Models.Member>

@{
    ViewData["Title"] = "Members";
}

<h1>Members</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gif)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacebookUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstagramUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkedInUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <img src="~/Images/@item.Image" style="max-height:200px; max-width: 200px" />
            </td>
            <td>
                <img src="~/Images/@item.Gif" style="max-height:200px; max-width: 200px" />
            </td>
            <td>
                <a class="link" href="@item.FacebookUrl" target="_blank">@item.FacebookUrl</a>
            </td>
            <td>
                <a class="link" href="@item.InstagramUrl" target="_blank">@item.InstagramUrl</a>
            </td>
            <td>
                <a class="link" href="@item.LinkedInUrl" target="_blank">@item.LinkedInUrl</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
    .link { width: 200px; word-break: break-all; }
</style>
